<h1>Emails#new</h1>

<div id="error_message"></div>

<%= form_for @email do |f| %>
  <div>
    <%= f.label :recipient %>
    <%= f.text_field :recipient %>
  </div>

  <div>
    <%= f.label :subject %>
    <%= f.text_field :subject %>
  </div>

  <div>
    <%= f.label :body %>
    <%= f.text_area :body, rows: 40, cols: 80 %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>
